<h1>The Watchman Dashboard</h1>

<p>User Profile Information</p>
<ul>
    <li>Username: <%= @current_user.username %></li>
    <li>Real Name: <%= @current_user.first_name %> <%= @current_user.last_name %></li>
    <li>Email: <%= @current_user.email %></li>
    <li>Birthday: <%= @current_user.birthday %></li>
    <li><a href="/profile">User Profile</a></li>
</ul>

<p>Posts</p>
<form action="/dashboard" method="post">
    <input type="text" name="title" placeholder="Title">
    <textarea name="content" cols="30" rows="10" placeholder="Content..."></textarea>
    <input type="submit" value="Submit">
</form>

<div id="posts">
    <% for i in (@posts.length).downto(1) %>
        <div class="post">
            <p><%= @posts.find(i).title %> by <%= @posts.find(i).user.username %> on <%= (@posts.find(i).updated).to_s[0..9] %></p>
            <p><%= @posts.find(i).content %></p>
        </div>
    <% end %>
</div>